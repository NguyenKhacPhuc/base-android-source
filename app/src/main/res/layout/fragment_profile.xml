<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"

    >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/background_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_profile"
                android:paddingBottom="@dimen/definite_dimen_24"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingTop="@dimen/definite_dimen_50">

                <TextView
                    android:id="@+id/text_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/definite_dimen_20"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/profil"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteY="30dp" />

                <ImageView
                    android:id="@+id/image_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.707"
                    app:layout_constraintStart_toEndOf="@+id/text_profile"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/more" />

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="83dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/roundedimageprofile"
                    android:radius="120dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_profile"
                    app:srcCompat="@drawable/propil_image" />

                <TextView
                    android:id="@+id/text_nameProfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/fauzian_ahmad"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profile_image" />

                <TextView
                    android:id="@+id/text_emailProfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="fauzianahmad04@gmail.com"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_nameProfil" />

                <TextView
                    android:id="@+id/text_follower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="92dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Followers"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_emailProfil"
                    />

                <TextView
                    android:id="@+id/text_following"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="92dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Following"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_emailProfil" />

                <TextView
                    android:id="@+id/numberFollower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="129"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/text_follower"
                    app:layout_constraintStart_toStartOf="@+id/text_follower"
                    app:layout_constraintTop_toBottomOf="@+id/text_follower"
                    tools:layout_editor_absoluteY="274dp" />

                <TextView
                    android:id="@+id/numberFollowing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="238"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/text_following"
                    app:layout_constraintStart_toStartOf="@+id/text_following"
                    app:layout_constraintTop_toBottomOf="@+id/text_following"
                    tools:layout_editor_absoluteY="274dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/text_findFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Find friend"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/findFriend"
                android:layout_marginStart="77dp"
                />

            <ImageView
                android:id="@+id/findFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/background_profile"
                app:srcCompat="@drawable/findfriend_button"
                android:layout_marginTop="@dimen/definite_dimen_24"
                android:layout_marginStart="102dp"
                />

            <ImageView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/background_profile"
                android:layout_marginTop="@dimen/definite_dimen_24"
                android:layout_marginEnd="102dp"
                app:srcCompat="@drawable/share_button"
                />

            <TextView
                android:id="@+id/text_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/share"
                android:layout_marginEnd="99dp"

                />

            <ImageView
                android:id="@+id/blur_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/definite_dimen_20"
                app:layout_constraintTop_toBottomOf="@id/text_findFriend"
                android:layout_marginTop="@dimen/definite_dimen_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/blur_bar_mps"
                />

                <TextView
                    android:id="@+id/text_mostplayed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/definite_dimen_5"
                    android:fontFamily="@font/montserrat"
                    android:text="Mostly Played"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/definite_dimen_32"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/blur_bar" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_mps"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/definite_dimen_6"
                        android:paddingBottom="@dimen/definite_dimen_32"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_mostplayed"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"

                        />

        </androidx.constraintlayout.widget.ConstraintLayout>


